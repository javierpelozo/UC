<section id="portada">
	<h2>Contactanos</h2>
</section>

<section id="contacto">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-45">
				<div class="tituloPrincipal">
					<h2 class="titulo2PorqueElegir">¡Ayudanos a mejorar!</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-8 col-md-8 col-sm-8">
				<div class="formularioContacto wow fadeInLeft">
					{{#if enquirySubmitted}}
					<h3>Gracias por ponerte en contacto!</h3>
					{{else}}
					<form class="enviarDatos" method="post">
						<input type="hidden" name="action" value="contacto">
						<input type="text" name="name.full"  class="ingresarDatos datosTexto" value="{{formData.[name.full]}}" placeholder="Ingrese su nombre" required>
						<input type="email" name="email" class="ingresarDatos datosEmail" value="{{formData.email}}" placeholder="Ingrese su correo" required>
						<input type="text" name="phone" placeholder="Ingrese su teléfono (opcional)" class="ingresarDatos datosTexto" value="{{formData.phone}}">
							<textarea name="message" placeholder="Escriba su mensaje..." cols="30" rows="10" class="ingresarDatos datostxtArea" placeholder="Mensaje..." required>{{formData.message}}</textarea>
							<div>
								<label>¿Cuál es el motivo?</label>
								<select name="enquiryType" class="ingresarDatos datosTexto" placeholder="lalala">
									<option value="">(selecciona uno)</option>
									{{#each enquiryTypes}}
									<option value="{{value}}">{{label}}</option>
									{{/each}}
								</select>
							</div>
						<div class="form-actions">
							<button type="submit" class="datosEnviar btn btn-primary">Enviar</button>
						</div>
					</form>
					{{/if}}

				</div>
			</div>
			<div class="col-lg-4 col-md-4 col-sm-4">
            <div class="nuestraDireccion wow fadeInRight">
              <h3>Dirección</h3>
              <div class="direccionContacto">
                <p><i class="fa fa-car"></i> Ruta IV, Km. 2 e/ Teodoro Brusquetti y Padre Boix</p>
                <p><i class="fa fa-phone"></i> Teléfono: (0782) 232351</p>
                <p><i class="fa fa-envelope-o"></i> Email: ucasig@gmail.com</p>
                <p><i class="fa fa-map-marker"></i> San Ignacio Misiones, Paraguay</p>
              </div>
              <div class="direccionContacto">
                <ul class="footerRedesSociales">
                  <li><a href="#" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                  <li><a href="#" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                  <li><a href="#" title="Google+"><i class="fa fa-google-plus"></i></a></li>
                  <li><a href="#" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
                  <li><a href="#" title="Youtube"><i class="fa fa-youtube"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
		</div>
	</div>
</section>
<section id="cd-google-map">
<div id="google-container"></div>
<div id="cd-zoom-in"></div>
<div id="cd-zoom-out"></div>
</section>
