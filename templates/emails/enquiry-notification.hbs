<h1>Hi {{first_name}}</h1>
<p class="text-larger">Una notificaci√≥n se acaba de enviar al {{brand}}:</p>
{{#if enquiry.email}}
	<p class="text-larger">De
	{{#if enquiry.name.full}}
		<strong>{{enquiry.name.full}}</strong>
	{{/if}}

	{{#if enquiry.email}}
		(<a href="mailto:{{enquiry.email}}">{{enquiry.email}}</a>)
	{{/if}}
	</p>

	{{#if enquiry.phone}}
		<p class="text-larger">Phone: {{enquiry.phone}}</p>
	{{/if}}

	{{#if enquiry.enquiryType}}
		<p class="text-larger">{{underscoreFormat enquiry 'enquiryType'}}</p>
	{{/if}}

	{{#if enquiry.message}}
		{{{enquiry.message.html}}}
	{{/if}}

	<p class="text-muted">Sent {{underscoreFormat enquiry 'createdAt'}}</p>
	<button url="/keystone/enquiries/{{enquiry.id}}" label="Open Keystone" />
